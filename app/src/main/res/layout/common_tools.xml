<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:background="@color/default_color"
        android:layout_height="52dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/tool_fees"
                android:layout_gravity="center"
                android:src="@drawable/ic_fees"/>
            <TextView
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/toos_fees"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/tool_budget"
                android:layout_gravity="center"
                android:src="@drawable/ic_budget"/>
            <TextView
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/toos_budget"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/tool_blog"
                android:layout_gravity="center"
                android:src="@drawable/ic_blog"/>
            <TextView
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/toos_blog"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>