<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:editor="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D6D6"
    tools:context="com.whut.view.TestActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <common.components.richText.TextEditor
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:textColor="#272636"
            android:padding="16dp"
            android:gravity="top|start"
            android:layout_above="@+id/tools"
            android:background="@android:color/transparent"
            android:id="@+id/editor"
            editor:bulletGapWidth="8dp"
            editor:bulletRadius="2dp"
            editor:quoteCapWidth="2dp"
            editor:quoteStripeWidth="8dp"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tools">

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_bold"
                android:id="@+id/bold"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_quote"
                android:id="@+id/quote"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_li"
                android:id="@+id/bullet"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_img"
                android:id="@+id/image"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
